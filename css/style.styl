/* ------------------------- TYPOGRAPHY ------------------------- */
/*@import url('http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,300,600,700');*/
@import url("http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic")
html
  font-family: 'Lato', sans-serif
a
  text-decoration: none
$base-font-size = 1.2rem
$max-font-size = 2.5rem
// max font-size (with multiplier: 1)
$base-font-size-multiplier = 1
// it will scale up every P, H1-H6 element's font size
$base-line-height-multiplier = 1.3
font-size-calculate($multiply, $bodytext = false)
  $font-size = $max-font-size
  //
  if $bodytext
    $font-size = $base-font-size
  //
  font-size: ($font-size / 6 * $multiply * $base-font-size-multiplier)
  line-height: ($font-size / 6 * $multiply * $base-line-height-multiplier)
p,
a,
ul,
li
  font-weight: 300
  color: rgb(0, 0, 0)
  //    font-size: $base-font-size * $base-font-size-multiplier;
  //    line-height: $base-font-size * $base-line-height-multiplier;
  font-size-calculate(6, true)
h1
  font-weight: 400
  color: rgb(100, 100, 100)
  font-size-calculate(6)
h2
  font-weight: 400
  color: rgb(100, 100, 100)
  font-size-calculate(5)
h3
  font-weight: 400
  color: rgb(100, 100, 100)
  font-size-calculate(4)
h4
  font-weight: 400
  color: rgb(100, 100, 100)
  font-size-calculate(3)
h5
  font-weight: 400
  color: rgb(100, 100, 100)
  font-size-calculate(2)
h6
  font-weight: 700
  color: rgb(100, 100, 100)
  font-size-calculate(1)
